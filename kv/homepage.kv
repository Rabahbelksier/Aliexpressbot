<HomePage>:
    BoxLayout:
        orientation: 'vertical'
        rows: 1
        cols: 2
        padding: 20
        spacing: 15
        TextInput:
            id: link_prod
            multiline: False
            hint_text: "Digite o link do Produto"
        TextInput:
            id: desc_prod
            multiline: 5
            hint_text: "Descrição do Produto"
        TextInput:
            id: title_prod
            multiline: False
            hint_text: "Título do Produto"
        TextInput:
            id: valor_prod
            multiline: False
            hint_text: "Valor da Conta Nova"
        TextInput:
            id: cupom_conta_nova
            multiline: False
            hint_text: "Cupom da Conta Nova"
        TextInput:
            id: valor_conta_antiga
            multiline: False
            hint_text: "Valor da Conta Antiga"
        TextInput:
            id: cupom_conta_antiga
            multiline: False
            hint_text: "Cupom da Conta Antiga"
        TextInput:
            id: url_imagem
            multiline: False
            hint_text: "URL da Imagem"
        TextInput:
            id: link_afiliado
            multiline: False
            hint_text: "Link Afiliado"
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            spacing: 15

            Button:
                text: "Buscar Produto"
                on_press: root.buscar_prod()

            Button:
                text: "Enviar Mensagem"
                on_press: root.enviar_msg()