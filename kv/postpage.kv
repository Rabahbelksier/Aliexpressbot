<PostPage>:
    BoxLayout:
        orientation: 'vertical'
        rows: 1
        cols: 2
        padding: 5
        spacing: 3
        Label:
            id: msg_err
            text: ""
            color: 0.5, 0.6, 1, 1
            font_size: 20
            bold: True
            size_hint: (1, None)
            size: (0, 0)
            height: self.texture_size[1]
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        TextInput:
            id: link_produto
            input_type: 'text'
            required: True
            multiline: 5
            hint_text: "Digite o link do Produto"
        TextInput:
            id: desc_prod
            input_type: 'text'
            input_mode: 'emoji'
            multiline: 5
            hint_text: "Descrição do Produto"
        TextInput:
            id: title_prod
            multiline: False
            hint_text: "Título do Produto"
        GridLayout:
            cols: 2
            size_hint: (1, 1)
            width: self.width
            height: dp(50)
            spacing: 5
            TextInput:
                id: v_prod
                multiline: False
                width: dp(50)
                hint_text: "1 Variação do Produto"
            TextInput:
                id: valor_prod
                multiline: False
                hint_text: "Digite o valor da Primeira Variaçao"
        GridLayout:
            cols: 2
            size_hint: (1, 1)
            width: self.width
            height: dp(50)
            spacing: 5
            TextInput:
                id: v_2
                multiline: False
                hint_text: "2º Variação do Produto"
            TextInput:
                id: valor_v2
                multiline: False
                hint_text: "Digite o valor da 2º Variação"
        GridLayout:
            cols: 2
            size_hint: (1, 1)
            width: self.width
            height: dp(50)
            spacing: 5
            TextInput:
                id: v_3
                multiline: False
                hint_text: "3º Variação do Produto"
            TextInput:
                id: valor_v3
                multiline: False
                hint_text: "Digite o valor da 3º Variação"
        TextInput:
            id: cupom_conta_nova
            multiline: False
            hint_text: "Digite o Cupom"
        TextInput:
            id: url_imagem
            multiline: False
            hint_text: "URL da Imagem"
        TextInput:
            id: link_afiliado
            multiline: False
            hint_text: "Link Afiliado"

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            spacing: 15

            Button:
                text: "Buscar Produto"
                on_press: root.buscar_prod()

            Button:
                text: "Enviar Mensagem"
                on_press: root.enviar_msg()

            Button:
                text: "Post Simples"
                on_press: app.mudar_tela("homepage")