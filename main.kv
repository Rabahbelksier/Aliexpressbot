#:include kv/homepage.kv
#:import utils kivy.utils
<TextInput@TextInput>:
    font_size: sp(18)
    foreground_color: 1, 1, 1, 1
    background_color: 0.5, 0.5, 0, 0.5
    hint_text_color: 0, 0, 0, 1
FloatLayout:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#ffffff")
        Rectangle:
            size: self.size
            pos: self.pos
    ScreenManager:
        pos_hint: {"right":0.1, "top": 0.1}
        size_hint: 0.1, 0.1
        id: screen_manager
    HomePage:
        name: "homepage"
        id: homepage